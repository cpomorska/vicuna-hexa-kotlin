        <!-- Platform versions -->
        <kotlin.version>2.2.20</kotlin.version>
        <quarkus.camel.version>3.26.0</quarkus.camel.version>
        <quarkus.platform.artifact-id>quarkus-bom</quarkus.platform.artifact-id>
        <quarkus.platform.group-id>io.quarkus.platform</quarkus.platform.group-id>
        <quarkus.platform.version>3.26.4</quarkus.platform.version>

        <!-- Dependency versions -->
        <archunit.version>1.4.1</archunit.version>
        <assertj.version>3.27.6</assertj.version>
        <bytebuddy.version>1.17.7</bytebuddy.version>
        <camel-quarkus-integration-test-kotlin.version>3.16.0</camel-quarkus-integration-test-kotlin.version>
