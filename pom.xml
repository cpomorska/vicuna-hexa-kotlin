        <quarkus-maven-plugin.version>3.28.0</quarkus-maven-plugin.version>
        <sonar-maven-plugin.version>5.2.0.4988</sonar-maven-plugin.version>

        <!-- SonarQube properties -->
        <sonar.exclusions>src/test/kotlin/com/scprojekt/health/**</sonar.exclusions>
        <sonar.projectKey>Vicuna-kotlin</sonar.projectKey>
        <sonar.projectName>Vicuna kotlin</sonar.projectName>
        <sonar.qualitygate.wait>true</sonar.qualitygate.wait>
    </properties>

